<?xml version="1.0"?>
<Container version="2">
  <Name>Printarr</Name>
  <Repository>printarr:latest</Repository>
  <Registry/>
  <Network>bridge</Network>
  <Privileged>false</Privileged>
  <Support>https://github.com/AdamA817/printarr</Support>
  <Project>https://github.com/AdamA817/printarr</Project>
  <Overview>
    Printarr monitors Telegram channels for 3D-printable designs and organizes
    them into a structured library. Features include: Radarr-style catalog UI,
    Thangs metadata integration, archive extraction (ZIP/RAR/7z), configurable
    library folder templates, and a download queue with activity tracking.
    Inspired by Radarr/Sonarr for 3D printing workflows.
  </Overview>
  <Category>MediaApp:Other Productivity:</Category>
  <WebUI>http://[IP]:[PORT:3333]</WebUI>
  <TemplateURL>https://raw.githubusercontent.com/AdamA817/printarr/main/unraid/printarr.xml</TemplateURL>
  <Icon>https://raw.githubusercontent.com/AdamA817/printarr/main/docs/icon.png</Icon>
  <ExtraParams/>
  <PostArgs/>
  <CPUset/>
  <DateInstalled/>
  <DonateText/>
  <DonateLink/>
  <Requires/>

  <Config Name="Web UI Port" Target="3333" Default="3333" Mode="tcp"
          Description="Web interface port" Type="Port" Display="always"
          Required="true" Mask="false">3333</Config>

  <Config Name="Config Path" Target="/config" Default="/mnt/user/appdata/printarr/config"
          Mode="rw" Description="Application config and Telegram session"
          Type="Path" Display="always" Required="true" Mask="false"/>

  <Config Name="Data Path" Target="/data" Default="/mnt/user/appdata/printarr/data"
          Mode="rw" Description="Database and internal state"
          Type="Path" Display="always" Required="true" Mask="false"/>

  <Config Name="Staging Path" Target="/staging" Default="/mnt/user/downloads/printarr-staging"
          Mode="rw" Description="Temporary workspace for downloads and archive extraction. Files are downloaded here, extracted, then moved to Library. Auto-cleaned after successful import."
          Type="Path" Display="always" Required="true" Mask="false"/>

  <Config Name="Library Path" Target="/library" Default="/mnt/user/3d-library"
          Mode="rw" Description="Final organized 3D model library"
          Type="Path" Display="always" Required="true" Mask="false"/>

  <Config Name="Cache Path" Target="/cache" Default="/mnt/user/appdata/printarr/cache"
          Mode="rw" Description="Thumbnails and rendered previews"
          Type="Path" Display="always" Required="true" Mask="false"/>

  <Config Name="Log Level" Target="PRINTARR_LOG_LEVEL" Default="INFO"
          Mode="" Description="Logging level (DEBUG, INFO, WARNING, ERROR)"
          Type="Variable" Display="advanced" Required="false" Mask="false">INFO</Config>

  <Config Name="Max Concurrent Downloads" Target="PRINTARR_MAX_CONCURRENT_DOWNLOADS"
          Default="3" Mode="" Description="Maximum simultaneous Telegram downloads (1-10)"
          Type="Variable" Display="advanced" Required="false" Mask="false">3</Config>

  <Config Name="Library Template" Target="PRINTARR_LIBRARY_TEMPLATE"
          Default="{designer}/{channel}/{title}" Mode=""
          Description="Folder structure template for organizing downloads. Variables: {designer}, {channel}, {title}, {date}, {year}, {month}. Must include {title}."
          Type="Variable" Display="advanced" Required="false" Mask="false">{designer}/{channel}/{title}</Config>

  <Config Name="Telegram API ID" Target="TELEGRAM_API_ID" Default=""
          Mode="" Description="Telegram API ID from https://my.telegram.org (required)"
          Type="Variable" Display="always" Required="true" Mask="false"/>

  <Config Name="Telegram API Hash" Target="TELEGRAM_API_HASH" Default=""
          Mode="" Description="Telegram API Hash from https://my.telegram.org (required)"
          Type="Variable" Display="always" Required="true" Mask="true"/>

  <Config Name="FlareSolverr URL" Target="PRINTARR_FLARESOLVERR_URL" Default=""
          Mode="" Description="Optional: URL to FlareSolverr instance for Thangs integration. Example: http://192.168.1.x:8191/v1. Leave blank if not using FlareSolverr."
          Type="Variable" Display="advanced" Required="false" Mask="false"/>

  <Config Name="Live Sync Enabled" Target="PRINTARR_SYNC_ENABLED" Default="true"
          Mode="" Description="Enable live monitoring to automatically ingest new posts from channels"
          Type="Variable" Display="advanced" Required="false" Mask="false">true</Config>

  <Config Name="Sync Poll Interval" Target="PRINTARR_SYNC_POLL_INTERVAL" Default="300"
          Mode="" Description="Catch-up sync interval in seconds (60-3600). Default: 300 (5 minutes)"
          Type="Variable" Display="advanced" Required="false" Mask="false">300</Config>

  <Config Name="Sync Batch Size" Target="PRINTARR_SYNC_BATCH_SIZE" Default="100"
          Mode="" Description="Maximum messages to process per sync batch (10-500)"
          Type="Variable" Display="advanced" Required="false" Mask="false">100</Config>
</Container>
